            <tr>
                <th>Active</th>
                <td>{{ priority.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('priority_index') }}">back to list</a>

    <a href="{{ path('priority_edit', {'id': priority.id}) }}">edit</a>

