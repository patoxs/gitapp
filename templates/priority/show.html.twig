{% extends 'base.html.twig' %}

{% block title %}Priority{% endblock %}

{% block body %}
    <h1>Priority</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ priority.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ priority.name }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ priority.icon }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ priority.color }}</td>
