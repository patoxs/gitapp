{% extends 'base.html.twig' %}

{% block title %}Merge index{% endblock %}

{% block body %}
    <h1>Merge index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for merge in merges %}
            <tr>
                <td>{{ merge.id }}</td>
                <td>{{ merge.date ? merge.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('merge_show', {'id': merge.id}) }}">show</a>
                    <a href="{{ path('merge_edit', {'id': merge.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('merge_new') }}">Create new</a>
{% endblock %}