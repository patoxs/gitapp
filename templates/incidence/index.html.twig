{% extends 'base.html.twig' %}

{% block title %}Incidence index{% endblock %}

{% block body %}
    <h1>Incidence index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Icon</th>
                <th>Color</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for incidence in incidences %}
            <tr>
                <td>{{ incidence.id }}</td>
                <td>{{ incidence.name }}</td>
                <td>{{ incidence.icon }}</td>
                <td>{{ incidence.color }}</td>
                <td>{{ incidence.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('incidence_show', {'id': incidence.id}) }}">show</a>
                    <a href="{{ path('incidence_edit', {'id': incidence.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('incidence_new') }}">Create new</a>
{% endblock %}