{% extends 'base.html.twig' %}

{% block title %}Commit index{% endblock %}

{% block body %}
    <h1>Commit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Commit_hash</th>
                <th>Date</th>
                <th>Commit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commit in commits %}
            <tr>
                <td>{{ commit.id }}</td>
                <td>{{ commit.commitHash }}</td>
                <td>{{ commit.date ? commit.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commit.commit }}</td>
                <td>
                    <a href="{{ path('commit_show', {'id': commit.id}) }}">show</a>
                    <a href="{{ path('commit_edit', {'id': commit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commit_new') }}">Create new</a>
{% endblock %}