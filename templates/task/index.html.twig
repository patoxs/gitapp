{% extends 'base.html.twig' %}

{% block title %}Task index{% endblock %}

{% block body %}
    <h1>Task index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Date_create</th>
                <th>Date_start</th>
                <th>Date_end</th>
                <th>Estimated_hours</th>
                <th>Email_notify_user</th>
                <th>Email_notify_team</th>
                <th>Icon</th>
                <th>Color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.id }}</td>
                <td>{{ task.title }}</td>
                <td>{{ task.description }}</td>
                <td>{{ task.dateCreate ? task.dateCreate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ task.dateStart ? task.dateStart|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ task.dateEnd ? task.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ task.estimatedHours }}</td>
                <td>{{ task.emailNotifyUser ? 'Yes' : 'No' }}</td>
                <td>{{ task.emailNotifyTeam ? 'Yes' : 'No' }}</td>
                <td>{{ task.icon }}</td>
                <td>{{ task.color }}</td>
                <td>
                    <a href="{{ path('task_show', {'id': task.id}) }}">show</a>
                    <a href="{{ path('task_edit', {'id': task.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('task_new') }}">Create new</a>
{% endblock %}