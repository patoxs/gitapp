{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Short_name</th>
                <td>{{ project.shortName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ project.email }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ project.icon }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ project.color }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ project.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('project_index') }}">back to list</a>

    <a href="{{ path('project_edit', {'id': project.id}) }}">edit</a>

    {{ include('project/_delete_form.html.twig') }}
{% endblock %}